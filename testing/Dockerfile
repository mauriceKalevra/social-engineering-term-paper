# Verwende das Basis-Image mit einer GUI-Umgebung
FROM ubuntu:latest

# Installiere die erforderlichen Pakete f端r Thunderbird und die GUI-Unterst端tzung
RUN apt-get update && apt-get install -y \
    thunderbird \
    dbus-x11 \
    x11-xserver-utils \
    mesa-utils \
    xvfb

# Setze die Umgebungsvariablen f端r die GUI-Unterst端tzung
ENV DISPLAY=:0

# Starte den X-Server und Thunderbird
CMD sh -c "Xvfb $DISPLAY -screen 0 1024x768x16 & sleep 5 && dbus-launch thunderbird"

